  <body>

    <nav class="d-flex justify-content-between">
      <div class="column">
        <h6><%= link_to "Wikinimous", articles_path %></h6>
      </div>
      <div class="column">
        <%= link_to "New article", new_article_path %>
      </div>
    </nav>

    <div class="container m-9">
      <%= yield %>
    </div>
  </body>
